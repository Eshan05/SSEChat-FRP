{
  "extends": "../../tsconfig.json",
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "types": [
      "vite/client"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@pkg/*": [
        "../../packages/*"
      ]
    },
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo"
  }
}